@model GrupoSatelitePruebaTecnica.Models.AlumnoVM

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Detalles del Evento</h5>
            <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <div class="grid-containermodalsito">
                <div class="modalcuerpo">
                    <div class="row">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            Codigo Alumno
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.codAlumno, "", new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            Nombre Completo
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Nombre, "", new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            Edad
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Edad, "", new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            Genero
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Genero, "", new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            Grado
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.NombreGrado, "", new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            Observaciones
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.TextAreaFor(model => model.Observacion, new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <center>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-secondary CerrarModal">Cerrar</button>
            </div>
        </center>
    </div>
</div>
